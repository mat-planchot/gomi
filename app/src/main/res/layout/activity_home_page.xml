<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_homepage"
    tools:context=".HomePageActivity">

    <ImageView
        android:id="@+id/logoHomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:contentDescription="@string/photo_homepage"
        app:srcCompat="@drawable/logo_gomi" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoHomePage"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/slogan"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/logoHomePage" />

    <Button
        android:id="@+id/btnHomePage"
        android:contentDescription="@string/continued"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins"
        android:text="@string/continued"
        android:textColor="@color/colorWhite"
        android:background="@drawable/rounded_corners"
        android:paddingHorizontal="125dp"
        android:paddingVertical="15dp"
        android:onClick="continueClick"
        tools:textSize="14sp" />

</RelativeLayout>